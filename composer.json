{
    "name": "dinophp/bubbletemplate",
    "description": "Bubble, the native PHP template system that's fast, easy to use and easy to extend.",
    "keywords": [
        "dinophp",
        "package",
        "templating",
        "templates",
        "views"
    ],
    "homepage": "https://bubble.dinophp.com",
    "license": "MIT",
    "authors" : [
        {
            "name": "Ahmed Mohamed Ibrahim",
            "email": "ahmedmohamed@dinophp.com",
            "role": "Developer"
        }
    ],
    "require" : {
        "php": "^7.0|^8.0"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Dinophp\\Bubble\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dinophp\\Bubble\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "docs": "hugo -s doc server"
    }
}
